<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head', {title: 'Home'}) %>
  <body>

    <%- include('./partials/header') %>

    <div class="position-relative " id="banner">
      <img src="images\header-2.png" alt="header" class="w-100">
      <div class="position-absolute top-50 start-0 ms-5 ps-5">
        <h1 class="banner-text">Electronics</h1>
      </div>
    </div>

    <main class="theme">

      <ul class="nav nav-pills justify-content-center mt-5 theme mb-3" style="border-bottom: 1.5px solid rgba(0, 0, 0, 0.125);">
        <li class="nav-item">
          <p class="nav-link">16 of 32 products</p>
        </li>
        <li class="nav-item">
          <p class="nav-link text-black-50">|</p>
        </li>
        <li class="nav-item">
          <p class="nav-link text-black-50">Sort by:</p>
        </li>
        <li class="nav-item mx-2">
          <a class="nav-link active bg-info bg-gradient rounded-pill" aria-current="page" href="#">Most recent</a>
        </li>
        <li class="nav-item rounded-pill mx-2">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Lowest price</a>
        </li>
        <li class="nav-item rounded-pill mx-2">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Highest price</a>
        </li>
      </ul>

      <div class="row align-items-center justify-content-evenly">
        
        <% for (product of products) { %>
          <div class="col">
            <div class="card p-3 m-3 shadow custom-card " style="width: 18rem;">
              <img src="<%= product.img.hdUrl %>" class="card-img-top mb-2" alt="Nombre">
              <img src="/images/icons/buy-blue.svg" id="shop-icon" class="shop-icon" alt="shop">
              <ul class="list-group list-group-flush">
                <li class="list-group-item pb-0 ps-0">
                  <h5 class="card-title" style="color: black;"><%= product.name %></h5>
                  <p class="card-text text-black-50"><%= product.category %></p>
                </li>
              </ul>
              <div class="card-body redeem text-center custom-overlay bg-overlay visually-hidden" >
                <p class="card-text"><div class="p-1 ps-2 rounded-pill cost"><%= product.cost %> <img src="images\icons\coin.svg" alt="coin" style="width: 1.1em;"></div></p>
                <p><a href="#" class="btn btn-light rounded-pill text-center " style="width: 90%;">Redeem now</a></p>
              </div>
            </div>
          </div>
        <% } %>

      </div>

    </main>
    
    <%- include('./partials/footer') %>

    <script src="js/scripts.js" type="text/javascript"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
  
  </body>
</html>